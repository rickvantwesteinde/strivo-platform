tee app/views/storefront/sessions/show.html.erb >/dev/null <<'EOF'
<% if @session.present? %>
  <div class="max-w-3xl mx-auto p-6 space-y-6">
    <h1 class="text-2xl font-semibold"><%= @session.try(:class_type)&.try(:name) || "Sessie" %></h1>
    <div class="text-gray-700">
      <div><strong>Wanneer:</strong> <%= l(@session.try(:start_at) || @session.try(:starts_at), format: :long) rescue (@session.try(:start_at) || @session.try(:starts_at)) %></div>
      <% if (t = @session.try(:trainer)) %>
        <div><strong>Trainer:</strong> <%= t.try(:user)&.try(:email) || t.try(:name) %></div>
      <% end %>
    </div>

    <div class="pt-4">
      <% if @booking.present? %>
        <%= button_to "Annuleer boeking",
            storefront_booking_path(@booking),
            method: :delete,
            class: "rounded-md px-4 py-2 bg-red-600 text-white hover:bg-red-700" %>
      <% else %>
        <%= button_to "Boek deze sessie",
            storefront_bookings_path(session_id: @session.id),
            method: :post,
            class: "rounded-md px-4 py-2 bg-gray-900 text-white hover:bg-gray-800" %>
      <% end %>
    </div>

    <div>
      <%= link_to "â† Terug naar lessen", storefront_classes_path, class: "text-sm text-gray-600 hover:underline" %>
    </div>
  </div>
<% else %>
  <div class="max-w-3xl mx-auto p-6"><p>Sessie niet gevonden.</p></div>
<% end %>
EOF