<h1><%= @session.class_type.name %></h1>

<p><strong>Wanneer:</strong> <%= l(@session.starts_at, format: :long) %> - <%= l(@session.starts_at + @session.duration_minutes.minutes, format: :long) %></p>
<p><strong>Locatie:</strong> <%= @session.gym.name %></p>
<% if @session.trainer.present? %>
  <p><strong>Trainer:</strong> <%= @session.trainer&.user&.email %></p>
<% end %>
<p><strong>Capaciteit:</strong> <%= @session.capacity %></p>
<p><strong>Ingeschreven:</strong> <%= @occupancy %> / <%= @session.capacity %></p>
<p><strong>Vrije plekken:</strong> <%= @spots_left %></p>

<% if @booking.present? %>
  <p>Je bent ingeschreven voor deze sessie.</p>
  <%= button_to 'Annuleer', storefront_booking_path(@booking), method: :delete, data: { confirm: 'Weet je het zeker?' } %>
<% elsif @spots_left.zero? %>
  <p>Deze sessie is vol.</p>
<% else %>
  <%= button_to 'Boek', storefront_bookings_path(session_id: @session.id), method: :post %>
<% end %>

<p><%= link_to 'Terug naar lessen', storefront_classes_path %></p>
