<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Welkom bij <%= current_gym.name %></h1>
      <p class="text-gray-600 mt-1">Beheer je boekingen en credits</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Credits</p>
            <!-- Toon helper, val terug op @credits als die gezet is -->
            <p class="text-3xl font-bold text-blue-600 mt-1">
              <%= (defined?(remaining_credits) && remaining_credits(current_spree_user, current_gym)) || (@credits || 0) %>
            </p>
          </div>
          <div class="bg-blue-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Actieve Boekingen</p>
            <p class="text-3xl font-bold text-green-600 mt-1"><%= current_spree_user.bookings.confirmed.count %></p>
          </div>
          <div class="bg-green-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Wachtlijst</p>
            <p class="text-3xl font-bold text-yellow-600 mt-1"><%= current_spree_user.waitlist_entries.count %></p>
          </div>
          <div class="bg-yellow-100 p-3 rounded-full">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Sessions -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Sessies Vandaag</h2>
      </div>
      <div class="divide-y divide-gray-200">
        <% if @sessions_today.present? && @sessions_today.any? %>
          <% @sessions_today.each do |session| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                <div class="flex-1">
                  <div class="flex items-center gap-3">
                    <h3 class="text-lg font-medium text-gray-900"><%= session.class_type&.name %></h3>
                    <span class="text-sm text-gray-500">
                      <%= l(session.start_at, format: :short) %> <!-- start_at i.p.v. starts_at -->
                    </span>
                  </div>
                  <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 mt-1 text-sm text-gray-600">
                    <span>Trainer: <%= session.trainer&.user&.name %></span>
                    <span class="hidden sm:inline">â€¢</span>
                    <span class="font-medium text-gray-900">
                      <%= session.bookings.confirmed.count %> / <%= session.capacity %> plekken
                    </span>
                  </div>
                </div>

                <div class="mt-4 sm:mt-0 sm:ml-6">
                  <% if (booking = current_spree_user.bookings.find_by(session: session)) %>
                    <%= button_to "Annuleren",
                                  storefront_booking_path(booking),
                                  method: :delete,
                                  class: "bg-red-500 hover:bg-red-600 text-white px-5 py-2.5 rounded-lg font-medium text-sm transition-colors",
                                  data: { confirm: "Weet je zeker dat je wilt annuleren?" } %>
                  <% else %>
                    <%= button_to "Boeken",
                                  storefront_bookings_path,
                                  params: { session_id: session.id },
                                  method: :post,
                                  class: "bg-green-500 hover:bg-green-600 text-white px-5 py-2.5 rounded-lg font-medium text-sm transition-colors" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="p-12 text-center text-gray-500">
            <p class="text-lg">Geen sessies vandaag</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>