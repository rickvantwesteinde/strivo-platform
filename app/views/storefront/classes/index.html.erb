tee app/views/storefront/classes/index.html.erb >/dev/null <<'EOF'
<div class="max-w-3xl mx-auto p-6 space-y-8">
  <header>
    <h1 class="text-2xl font-semibold">Lessen</h1>
    <p class="text-gray-600">Komende sessies</p>
  </header>

  <% if @sessions_by_class_type.present? %>
    <% (@class_types || []).each do |class_type| %>
      <section class="mb-6">
        <h2 class="text-lg font-medium"><%= class_type.try(:name) || "Les" %></h2>
        <% sessions = @sessions_by_class_type[class_type.id] || [] %>
        <% if sessions.any? %>
          <ul class="divide-y rounded-lg border">
            <% sessions.each do |s| %>
              <li class="p-4 flex items-center justify-between">
                <div class="text-sm text-gray-700">
                  <div><strong><%= l(s.try(:start_at) || s.try(:starts_at), format: :long) rescue (s.try(:start_at) || s.try(:starts_at)) %></strong></div>
                  
                </div>
                <%= link_to "Details", storefront_session_path(s), class: "rounded-md px-3 py-1.5 text-sm bg-gray-900 text-white hover:bg-gray-800" %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-gray-600">Geen sessies gepland.</p>
        <% end %>
      </section>
    <% end %>
  <% else %>
    <p class="text-gray-600">Nog geen geplande sessies.</p>
  <% end %>
</div>
EOF
