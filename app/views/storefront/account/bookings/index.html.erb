tee app/views/storefront/account/bookings/index.html.erb >/dev/null <<'EOF'
<div class="max-w-3xl mx-auto p-6 space-y-6">
  <h1 class="text-2xl font-semibold">Mijn boekingen</h1>

  <% if @bookings.present? %>
    <ul class="divide-y rounded-lg border">
      <% @bookings.each do |b| %>
        <% s = b.try(:session) %>
        <li class="p-4 flex items-center justify-between">
          <div>
            <div class="font-medium"><%= s.try(:class_type)&.try(:name) || "Sessie" %></div>
            <div class="text-sm text-gray-600">
              <%= s&.try(:start_at) || s&.try(:starts_at) ? (l(s.try(:start_at) || s.try(:starts_at), format: :long) rescue (s.try(:start_at) || s.try(:starts_at))) : "-" %>
            </div>
          </div>
          <% if s %>
            <div class="flex items-center gap-3">
              <%= link_to "Details", storefront_session_path(s), class: "rounded-md px-3 py-1.5 text-sm bg-gray-100 hover:bg-gray-200" %>
              <%= button_to "Annuleer", storefront_booking_path(b), method: :delete, class: "rounded-md px-3 py-1.5 text-sm bg-red-600 text-white hover:bg-red-700" %>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600">Je hebt nog geen boekingen.</p>
  <% end %>
</div>
EOF