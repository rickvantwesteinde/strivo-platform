<%# Account: My Credits %>

<%= render 'spree/account/account_nav', current: 'credits' %>

<div class="container mx-auto px-4 py-6">
  <h1 class="text-2xl font-semibold mb-4">My credits</h1>

  <!-- Saldo -->
  <div class="grid md:grid-cols-2 gap-6">
    <div class="p-4 border border-default rounded-lg">
      <div class="text-sm text-muted mb-1">Current balance</div>
      <div class="text-4xl font-bold">
        <%= number_with_precision(@balance, precision: 0) %>
        <span class="text-lg font-normal">credits</span>
      </div>
      <div class="text-sm text-muted mt-2">
        Gym: <%= @gym&.name || "—" %>
      </div>
    </div>

    <!-- Abonnement (optioneel/placeholder als er nog geen model is) -->
    <div class="p-4 border border-default rounded-lg">
      <div class="text-sm text-muted mb-1">Subscription</div>
      <% if @subscription.present? %>
        <div class="space-y-1">
          <div class="font-medium"><%= @subscription.try(:name) || "Active subscription" %></div>
          <% if @subscription.respond_to?(:status) %>
            <div class="text-sm">Status: <%= @subscription.status %></div>
          <% end %>
          <% if @subscription.respond_to?(:renews_at) && @subscription.renews_at.present? %>
            <div class="text-sm">Renews: <%= l(@subscription.renews_at, format: :long) %></div>
          <% end %>
        </div>
      <% else %>
        <div class="text-sm text-muted">No active subscription found.</div>
      <% end %>
    </div>
  </div>

  <!-- Transacties -->
  <div class="mt-8">
    <h2 class="text-xl font-semibold mb-3">Transactions</h2>

    <% if @entries.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead>
            <tr class="text-left border-b border-default">
              <th class="py-2 pr-4">Date</th>
              <th class="py-2 pr-4">Reason</th>
              <th class="py-2 pr-4">Booking</th>
              <th class="py-2 pr-4 text-right">Amount</th>
            </tr>
          </thead>
          <tbody>
            <% @entries.each do |e| %>
              <tr class="border-b border-default/50">
                <td class="py-2 pr-4 whitespace-nowrap"><%= l(e.created_at, format: :short) %></td>
                <td class="py-2 pr-4"><%= e.reason.presence || "—" %></td>
                <td class="py-2 pr-4">
                  <% if e.booking_id.present? %>
                    #<%= e.booking_id %>
                  <% else %>
                    —
                  <% end %>
                </td>
                <td class="py-2 pl-4 text-right">
                  <% amt = e.amount.to_i %>
                  <span class="<%= amt.positive? ? 'text-green-600' : (amt.negative? ? 'text-red-600' : '') %>">
                    <%= amt.positive? ? '+' : '' %><%= amt %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-sm text-muted">No transactions yet.</div>
    <% end %>
  </div>
</div>