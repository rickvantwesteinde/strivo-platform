<% content_for :title, "Club" %>

<div class="mx-auto max-w-3xl p-4 sm:p-6">
  <h1 class="mb-4 text-2xl font-bold">Club</h1>

  <% if @gym.present? %>
    <div class="rounded-2xl border bg-white p-4 shadow-sm">
      <p class="text-sm text-gray-600">Welkom bij</p>
      <p class="text-lg font-semibold"><%= @gym.name %></p>
    </div>
  <% else %>
    <div class="rounded-2xl border bg-white p-4 shadow-sm">
      <p class="text-gray-600">Nog geen gym geconfigureerd.</p>
    </div>
  <% end %>
</div>